<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="mypack">
        <class>entities.ClientsEntity</class>
        <class>entities.ProduitsEntity</class>
        <class>entities.AdminEntity</class>
        <class>entities.ChauffeursEntity</class>
        <class>entities.ManagersEntity</class>
        <class>entities.VehiculesEntity</class>
        <class>entities.VillesEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3308/mypack"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="user"/>
            <property name="hibernate.connection.password" value="123"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
